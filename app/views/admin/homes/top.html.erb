<h1>注文履歴一覧</h1>

<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
   <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= link_to order_detail.created_at, admin_order_path(order_detail) %></td>
      <td><%= order_detail.order.full_name %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order.oreder_status %></td>
    </tr>
  <% end %>
</table>

