<h1>注文履歴一覧</h1>

<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
   <% @order.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
      <td><%= order.full_name %></td>
      <td>
        <% total = 0 %>
        <% OrderDetail.where(order_id: order).each do |order_detail| %>
          <% order_detail.amount %>
          <% total += order_detail.amount %>
        <% end %>
          <%= total %>
        </td>
      <td><%= Order.oreder_status_methods_i18n[Order.oreder_status_methods.key(order.oreder_status) ] %></td>
    </tr>
  <% end %>
</table>

