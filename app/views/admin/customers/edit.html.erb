<div class="h-75">
  <div class="container mt-5 mb-4">
    <div class = "row">
      <div class = "col-4">
        <h4 class="bg-secondary text-center"><%= @customer.customer_full_name %>さんの会員情報編集</h4>
      </div>
    </div>
  </div>

<%=form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

  
  <div class="container mb-4">
    <div class = "row">
      <div class = "col-3">
        会員ID
      </div>
      <div class = "col-3">
        <%= @customer.id %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class = "form-group row">
      <div class = "col-3">
        氏名
      </div>
      <div class="col-2 pl-0">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-2 pr-0">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class = "col-5">
      </div>
    </div>
  </div>

  <div class="container">
    <div class = "form-group row">
      <div class = "col-3">
        フリガナ
      </div>
      <div class="col-2 pl-0">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-2 pr-0">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      <div class = "col-5">
      </div>
    </div>
  </div>

  <div class="container">
    <div class = "form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <div class = "col-2 pl-0">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
      <div class = "col-7">
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class = "form-group row">
      <%= f.label :address, "住所", class: "col-3 col-form-label" %>
      <div class = "col-6 p-0">
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class = "form-group row">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <div class = "col-2 pl-0">
        <%= f.telephone_field :telephone_number, class: "form-control" %>
      </div>
      <div class = "col-7">
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class = "form-group row">
      <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
      <div class = "col-2 pl-0">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class = "col-7">
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class = "form-group row">
      <p class="col-3">会員ステータス</p>
      <div class="col-1 ml-2">
        <%= f.radio_button :is_deleted, "false", class: "form-check-input" %>
        <%= f.label :is_deleted_false, "有効" , class: "form-check-label"%>
      </div>
      <div class="col-1">  
        <%= f.radio_button :is_deleted, "true", class: "form-check-input"  %>
        <%= f.label :is_deleted_true, "退会", class: "form-check-label" %>
      </div>
      <div class="col-7">
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class = "form-group row ">
      <div class="col-3">
      </div>
      <div class="col-2 p-0">
        <%= f.submit '変更を保存', class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <% end %>
</div>