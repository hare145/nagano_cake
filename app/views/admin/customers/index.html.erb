<div class="h-75">
  <div class="container mt-5 mb-4">
    <div class = "row">
      <div class = "col-3">
        <h4 class="bg-secondary text-center">会員一覧</h4>
      </div>
    </div>
  </div>

 <div class="container">
    <div class="row">
      <div class="col-12">
        <table class="table border-bottom">
          <thead class="thead-light">
            <th class="col-2">会員ID</th>
            <th class="col-3">氏名</th>
            <th class="col-4">メールアドレス</th>
            <th class="col-3">ステータス</th>
          </thead>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <u>
                  <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
                  <%= customer.last_name %> <%= customer.first_name %>
                  <% end %>
                </u>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true %>
              <td class="text-secondary">退会</td>
              <% elsif customer.is_deleted == false %>
              <td class="text-success">有効</td>
              <% else %>
              <td>なし</td>
　　　        <% end %>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row justify-content-center mb-3">  
      <%= paginate @customers %>
    </div>
  </div>

</div>
