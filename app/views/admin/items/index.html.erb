<h1>商品一覧</h1>

<table>
  <th>商品ID</th>
  <th>商品名</th>
  <th>税抜価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= Genre.find(item.genre_id).name %></td>
      <td><%= item.is_sale ? '販売中' : '販売停止中' %></td>
    </tr>
  <% end %>
</table>

