<div class="h-75">
  <div class="container mt-5 mb-4">
    <div class = "row">
      <div class = "col-3">
        <h4 class="bg-secondary text-center">ジャンル一覧・追加</h4>
      </div>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="container">
    <div class = "form-group row">
      <%= f.label :name, "ジャンル名", class: "col-2 col-form-label" %>
      <div class="col-2 pl-0">
        <%= f.text_field :name, placeholder: "ジャンル名",class: "form-control" %>
      </div>
      <div class="col-2 mb-4">
        <%= f.submit '新規登録', class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <% end %>

 <div class="container">
    <div class="row">
      <div class="col-4">
        <table class="table border-bottom">
          <thead class="thead-light">
            <th>ジャンル</th>
            <th></th>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>