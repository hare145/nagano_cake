<div class="h-75">
  <div class="container mt-5 mb-5">
    <div class = "row ml-5">
      <div class = "col-3">
        <h4 class="bg-secondary text-center">ジャンル編集</h4>
       </div>
    </div>
  </div>       
  
  <%= form_with model: @genre, url: admin_genre_path,method: :patch do |f| %>
  <div class="container">
    <div class = "form-group row">
      <%= f.label :name, "ジャンル名", class: "col-2 col-form-label" %>
      <div class="col-3 pl-0">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-1"></div>
      <div class="col-2">
        <%= f.submit '変更を保存', class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <% end %>
</div>