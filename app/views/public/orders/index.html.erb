<h1>注文履歴一覧</h1>


<table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= l order.created_at %></td>
      <td>
        〒<%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.full_name %>
      </td>
      
      <td>
        <% OrderDetail.where(order_id: order).each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
      </td>
      <td><%= order.invoice_amount.to_s(:delimited) %></td>
      <td><%= order.order_status %></td>
      
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
   <% end %>
</table>
