<p>注文情報確認</p>

<table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <% total = 0 %>
    </tr>
      <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    </tr>
        <% total += cart_item.subtotal %>
      <% end %>
</table>

<table>
    <tr>
      <th>送料</th>
      <td> 
      　<%= 800 %>
      </td>
    </tr>
    
    <tr>
      <th>商品合計</th>
      <td> 
      　<%= total.to_s(:delimited)  %>
      </td>
    </tr>
    
    <tr>
      <th>請求金額</th>
      <td> 
      　<%= (total += 800).to_s(:delimited)  %>
      </td>
    </tr>
</table>
  

<table>
    <tr>
      <th>支払方法</th>
      <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
    </tr>
    
    <tr>
      <th>お届け先</th>
      <td>
        〒<%= @order.postal_code %> <%= @order.address %> </br>
        <%= @order.full_name %>
      </td>
    </tr>
</table>

<%= form_with model: @order, url: orders_path do |f| %>
  <%= f.hidden_field :payment, :value =>  Order.payment_methods[@order.payment_method] %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address%>
  <%= f.hidden_field :full_name, :value => @order.full_name %>
  <%= f.hidden_field :postage, :value => 800 %>
  <%= f.hidden_field :invoice_amount, :value => total %>
  <%= f.hidden_field :order_status, :value => 0 %>
  
  <%= f.submit "確認画面へ進む" %>
<% end %>