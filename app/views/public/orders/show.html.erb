<h1>注文履歴詳細</h1>

<p>注文情報</p>
<table>
  <tr>
    <th>注文日</th>
    <td><%= l @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.full_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%=  Order.payment_methods_i18n[Order.payment_methods.key(@order.payment)] %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= Order.order_status_methods_i18n[Order.order_status_methods.key(@order.order_status)] %></td>
  </tr>
</table>

<p>請求情報</p>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.invoice_amount - 800 %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= 800 %></td>
  </tr>
  <tr>
    <th>ご請求書額</th>
    <td><%= @order.invoice_amount %></td>
  </tr>
</table>

<table>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
      <% total = 0 %>
    </tr>
    <% @orderdetails.each do |order| %>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= (order.price * 1.1).floor.to_s(:delimited) %></td>
      <td><%= order.amount %></td>
      <td><%= ((order.price * 1.1) * order.amount).floor.to_s(:delimited) %></td>
    </tr>
    <% total += (order.price * order.amount) %>
   <% end %>
</table>