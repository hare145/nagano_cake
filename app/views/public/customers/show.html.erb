<div class="h-75">
  <div class="container mt-4 mb-4">
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <h4 class = "bg-secondary text-center">マイページ</h4>
      </div>
    </div>
  </div>
  
  
  <div class="container mt-4">
    <div class="row">
      <div class="col-1 d-flex justify-content-center">
       <p class="font-weight-bold m-0 pt-2">登録情報</p>
      </div>
      <div class="col-2 mb-2">
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row">
      <table class="table table-bordered col-7">
        <thead class="thead-light">
          <tr>
            <th class="col-3">氏名</th>
            <td class="col-6"><%= current_customer.last_name %> <%= current_customer.first_name %></td>
          </tr>
        
          <tr>
            <th>カナ</th>
            <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
          </tr>
        
          <tr>
            <th>郵便番号</th>
            <td><%= current_customer.postal_code %></td>
          </tr>
          
          <tr>
            <th>住所</th>
            <td><%= current_customer.address %></td>
          </tr>
          
          <tr>
            <th>電話番号</th>
            <td><%= current_customer.telephone_number %></td>
          </tr>
          
          <tr>
            <th>メールアドレス</th>
            <td><%= current_customer.email %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>    

  <div class="container mt-4">
    <div class="row">
      <div class="col-1">
        <p class="font-weight-bold m-0 pt-2">配送先</p>
      </div>
      <div class="col-2">
        <%= link_to "一覧を見る", delivery_addresses_path, class: "d-block btn btn-primary" %>
      </div>
    </div>
  </div>
  
  <div class="container mt-4">
    <div class="row">
      <div class="col-1">
        <p class="font-weight-bold m-0 pt-2">注文履歴</p>
      </div>
      <div class="col-2">
        <%= link_to "一覧を見る", orders_path, class: "d-block btn btn-primary" %>
      </div>
    </div>
    <div class="row mt-5">
    </div>
  </div>
</div>