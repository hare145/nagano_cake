<h1>配送先編集</h1>

<%=form_with model: @delivery_address, url: delivery_address_path, method: :patch do |f| %>

<table>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    
    <tr>
      <th>宛名</th>
      <td><%= f.text_field :addressee %></td>
    </tr>
  </table>
  
  <%= f.submit '変更内容を保存' %>
  <% end %>