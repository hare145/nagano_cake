<div class="h-75">
  <div class="container mt-5 mb-4">
    <div class = "row">
      <div class = "col-3">
        <h4 class="bg-secondary text-center">配送先編集</h4>
      </div>
    </div>
  </div>
  
  <%=form_with model: @delivery_address, url: delivery_address_path, method: :patch do |f| %>

  <div class="container">
    <div class = "form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <div class = "col-2 p-0">
        <%= f.text_field :postal_code, class: "p-0 form-control" %>
      </div>
      <div class = "col-7">
      </div>
    </div>
  </div>
 
  <div class="container">
    <div class = "form-group row">
      <%= f.label :address, "住所", class: "col-3 col-form-label" %>
      <div class = "col-6 p-0">
        <%= f.text_field :address, class: "p-0 form-control" %>
      </div>
      <div class = "col-3">
      </div>
    </div>
  </div>
    
  <div class="container">
    <div class="form-group row">
      <%= f.label :addressee, "宛名", class: "col-3 col-form-label" %>
      <div class="col-2 p-0">
      <%= f.text_field :addressee, class: "p-0 form-control" %>
      </div>
      <div class="col-5">
      </div>
      <div class="col-2">
        <%= f.submit '変更内容を保存' , class: "p-0 form-control btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
  
  <div class="container">
    <div class="row mt-5 pt-5 mb-5 pb-5">
    </div>
    <div class="row mt-5 pt-5 mb-5 pb-5">
    </div>
    <div class="row mt-5 pt-5 mb-5 pb-5">
    </div>
  </div>
</div>