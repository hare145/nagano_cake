<div class="h-75">
  <div class="container mt-5 mb-4">
    <div class = "row">
      <div class = "col-3">
        <h4 class="bg-secondary text-center">配送先登録 / 一覧</h4>
      </div>
    </div>
  </div>

<%= form_with model: @delivery_address do |f| %>
  <div class="container">
    <div class = "form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <div class = "col-2 p-0">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "p-0 form-control" %>
      </div>
      <div class = "col-7">
      </div>
    </div>
  </div>
 
  <div class="container">
    <div class = "form-group row">
      <%= f.label :address, "住所", class: "col-3 col-form-label" %>
      <div class = "col-6 p-0">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "p-0 form-control" %>
      </div>
      <div class = "col-3">
      </div>
    </div>
  </div>
    
  <div class="container">
    <div class="form-group row">
      <%= f.label :addressee, "宛名", class: "col-3 col-form-label" %>
      <div class="col-2 p-0">
      <%= f.text_field :addressee, placeholder: "令和道子", class: "p-0 form-control" %>
      </div>
      <div class="col-5">
      </div>
      <div class="col-2">
        <%= f.submit '新規登録', class: "p-0 form-control btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>

　<div class="container">
    <div class="row">
      <div class="col-9">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th class="col-1">郵便番号</th>
              <th class="col-3">住所</th>
              <th class="col-1">宛名</th>
              <th class="col-2"></th>
            </tr>
          </thead>
          <% @delivery_addresses.each do |delivery_address| %>  
          <tr>
            <td><%= delivery_address.postal_code %></td>
            <td><%= delivery_address.address %></td>
            <td><%= delivery_address.addressee %></td>
            <td>
              <%= link_to "編集する", edit_delivery_address_path(delivery_address.id), class: "btn btn-success btn-sm" %>
              <%= link_to "削除する", delivery_address_path(delivery_address.id), class: "btn btn-danger btn-sm", method: :delete, "data-confirm" => "Are you sure?" %>
      　　　</td>
          </tr>
    　　　　　<% end %>
        </table>
      </div>
    </div>
  </div>
</div>