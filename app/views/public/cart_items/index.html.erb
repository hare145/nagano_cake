<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "Are you sure?" %>

<table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "Are you sure?" %>
  　　　</td>
      </tr>
      <% (total += cart_item.subtotal).to_s(:delimited) %>
    <% end %>
</table>


<%= link_to "買い物を続ける", items_path %>

<table>
    <tr>
      <th>合計金額</th>
      <td><%= total.to_s(:delimited) %></td>
    </tr>
</table>

<% if current_customer.cart_items.present? %>
   <%= link_to "情報入力に進む", orders_new_path %>
<% end %>