<div class="container m-5">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-3">
      <h4 class="bg-secondary text-center">新規会員登録</h4>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="container">
  <div class = "form-group row">
    <div class = "col-3">
      名前
    </div>
    <%= f.label :last_name, "(姓)" , class: "col-1 text-right col-form-label" %><br>
    <div class = "col-3 p-0">
      <%= f.text_field :last_name, placeholder: "令和", class: "p-0 form-control" %>
    </div>
    <%= f.label :first_name, "(名)", class: "col-1 text-right col-form-label" %><br>
    <div class = "col-3 p-0">
      <%= f.text_field :first_name, placeholder: "道子", class: "p-0 form-control" %>
    </div>
    <div class = "col-1">
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <div class = "col-3">
      フリガナ
    </div>
    <%= f.label :last_name_kana, "(セイ)", class: "col-1 text-right col-form-label" %>
    <div class = "col-3 p-0">
      <%= f.text_field :last_name_kana,placeholder: "レイワ", class: "p-0 form-control" %>
    </div>
    <%= f.label :first_name_kana, "(メイ)", class: "col-1 text-right col-form-label" %>
    <div class = "col-3 p-0">
      <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "p-0 form-control" %>
    </div>
    <div class = "col-1">
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
    <div class = "col-1">
    </div>
    <div class = "col-3 p-0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "p-0 form-control" %>
    </div>
    <div class = "col-5">
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
    <div class = "col-1">
    </div>
    <div class = "col-3 p-0">
      <%= f.text_field :postal_code, placeholder: "0000000", class: "p-0 form-control" %>
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <%= f.label :address, "住所", class: "col-3 col-form-label" %>
    <div class = "col-1">
    </div>
    <div class = "col-7 p-0">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "p-0 form-control" %>
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3 col-form-label" %>
    <div class = "col-1">
    </div>
    <div class = "col-3 p-0">
      <%= f.telephone_field :telephone_number, placeholder: "0000000000", class: "p-0 form-control" %>
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <div class = "col-3 col-form-label">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class = "col-1">
    </div>
    <div class = "col-3 p-0">
      <%= f.password_field :password, autocomplete: "new-password", class: "p-0 form-control" %>
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-3 col-form-label" %>
    <div class = "col-1">
    </div>
    <div class = "col-3 p-0">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-0 form-control" %>
    </div>
  </div>
</div>

<div class="container">
  <div class = "form-group row">
    <div class="col-4">
    </div>
    <div class = "col-2 p-0">
      <%= f.submit "新規登録", class: "btn btn-success form-control" %>
    </div>
  </div>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-4">
      <h4 class="bg-secondary text-center">既に登録済みの方</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mb-2">
    <div class="col-2">
    </div>
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>
</div>