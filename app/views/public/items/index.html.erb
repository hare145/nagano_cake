<h1>商品一覧</h1>

<p>(全<%= @item_count %>件)</p>

<% @items.each do |item| %>

<table>
  <th><%= link_to image_tag(item.get_image(200, 100 )), item_path(item.id) %></th>
    <tr>
      <td><%= item.name %></td>
    </tr>
    <tr>
      <td>　
        <span>￥</span>
        <%= (item.price * 1.1).to_i.to_s(:delimited) %>
      </td>
    </tr>
</table>

<% end %>
